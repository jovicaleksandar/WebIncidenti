
@{
    ViewBag.Title = "Zuti";
}

<h2>Zuti</h2>

<table border="1">
    <tr><th>Naziv</th><th>Opis</th><th>Boja</th></tr>
    @{
        foreach (Incident i in ViewBag.incidenti.collection.Values)
        {
            if (i.boja == "yellow")
            {
                <tr><td>@i.naziv</td><td>@i.opis</td><td style="background-color:@i.boja">@i.boja</td></tr>
            }
        }
    }
</table>
